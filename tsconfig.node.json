{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*", "src/main/*", "src/preload/*", "src/main/src/**/*"],
  "compilerOptions": {
    "target": "ES2020",
    "composite": true,
    "baseUrl": "./",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@main/*": [
        "src/main/src/*"
      ],
    }
  }
}
